<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/atividade_login_rotulo_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/atividade_login_campo_texto_senha"
        android:layout_alignLeft="@+id/atividade_login_botao_logar"
        android:text="@string/rotulo_senha"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/atividade_login_rotulo_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/atividade_login_campo_texto_login"
        android:layout_alignLeft="@+id/atividade_login_rotulo_senha"
        android:text="@string/rotulo_login"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/atividade_login_campo_texto_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/atividade_login_campo_texto_login"
        android:layout_below="@+id/atividade_login_campo_texto_login"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/atividade_login_imagem_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/atividade_login_campo_texto_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/atividade_login_botao_logar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/atividade_login_botao_cancelar"
        android:layout_alignBottom="@+id/atividade_login_botao_cancelar"
        android:layout_toLeftOf="@+id/atividade_login_campo_texto_senha"
        android:onClick="logar"
        android:text="@string/botao_logar"
        android:width="115dp" />

    <EditText
        android:id="@+id/atividade_login_campo_texto_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/atividade_login_imagem_logo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="37dp"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/atividade_login_botao_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/atividade_login_campo_texto_senha"
        android:layout_below="@+id/atividade_login_campo_texto_senha"
        android:layout_marginTop="36dp"
        android:onClick="cancelar"
        android:text="@string/botao_cancelar"
        android:width="115dp" />

</RelativeLayout>
